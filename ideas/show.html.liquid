    <div class="entry-page">

    <a href="{{space.permalink}}" title="back to all {{space.title}} entries" class="back-link">&laquo; back to all entries</a>

    <div id="single-entry">

    <img src="{{idea.images.first.grande}}" alt="Image for {{idea.title}}" class="entry-image" />

    <div id="entry-info">
        <h1>{{idea.title}}</h1>
        <div id="entry-meta"><img src="{{idea.user.image_url}}" alt="avatar for {{%idea.user%}}" width="25" height="25" class="avatar" /><span class="author">by <a href="" title="link to {{idea.user.nickname}} profile on {{user.provider}}">{{idea.user.nickname}}</a></span></div>
        <div id="entry-detail">{{idea.content | markdown}}</div>

        <ul class="actions-menu">
            <li><a href="{{idea.like_link}}" title="like action for {{idea.title}}" data-method="post" class="like">like this entry ({{idea.likes}})</a></li>
            <li class="alt"><a href="#comments" title="link to comments for this entry" class="comment">{{ idea.comments_count }} comments</a></li>
        </ul>
    </div>

    </div>

    <div id="comments" class="comments" class="span12">
                <h3>comments</h3>

                <div id="comments-form">
                    {% if current_user %}
                    <form action="{{idea.permalink}}/comments" method="post" charset="utf-8">
                        <div class="input"><textarea id="comment_body" name="comment[body]"></textarea></div>
                         <div class="submit-group">
                            <input type="submit" name="submit" value="post comment" class="btn primary submit" />
                            <div class="checkarea"><input class="checkbox" type="checkbox" id="comment_should_post_to_social" name="comment[should_post_to_social]" value="1" checked="checked" /> share this comment to {{current_user.provider}}?</div>
                        </div>
                    </form>
                    {% else %}
                    <div class="alert-message block-message warning">
                        <div class="logged-out">
                            <ul class="auth">
                                <li class="twitter"><a href="/auth/twitter" class="button"><span></span>Twitter</a></li>
                                <li class="facebook"><a href="/auth/facebook" class="button"><span></span>Facebook</a></li>
                            </ul>
                            <p><strong>To add a comment, like or add a new entry login with:</strong></p>
                        </div>
                    </div>
                    {% endif %}
                </div>

                {% if idea.comments != empty %}
                <ol>
                    {% for comment in idea.comments %}
                    <li><img src="{{comment.user.image_url}}" alt="avatar for {{%comment.user.name%}}" class="avatar" /><div class="author">on {{comment.created_at | date: "%b %m %Y"}}  <strong><strong><a href="" title="link to {{idea.user.nickname}} profile on {{user.provider}}">{{comment.user.nickname}}</a></strong></strong> said...</div><div class="comment">{{comment.body | markdown}}</div></li>
                    {% endfor %}
                <ol>
                {% else %}
                <ol>
                    <li><p>Nobody has commented here yet, maybe you could be the first?</p></li>
                </ol>
                {% endif %}

            </div>

            </div>

    </div>