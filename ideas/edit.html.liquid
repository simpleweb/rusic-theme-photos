<a href="{{idea.permalink}}" title="back to {{idea.title}}" class="back-link">&laquo; back to {{idea.title}}</a>

{% if current_user %}
  <!-- Edit form -->
  <div class="edit-form">
	<h2>Editing: {{idea.title}}</h2>
	<form id="entry_form" method="post" action="{{idea.permalink}}" class="clearfix" enctype="multipart/form-data">
	  <input type="hidden" name="_method" value="put" />
	  <fieldset>
		<div class="input"><label for="idea[title]">{{ theme.idea_context | capitalize }} title: </label><input class="span8 required" id="idea_title" name="idea[title]" type="text" value="{{idea.title}}"></div>
		<div class="input"><label for="idea[content]">Detail: </label> <textarea id="idea_content" name="idea[content]" rows="3" class="required">{{idea.content}}</textarea></div>
		<div class="input"><label for="idea_images_attributes_0_file">Change {{ theme.idea_context }}: </label> <input type="file" id="idea_images_attributes_0_file" name="idea[images_attributes][0][file]" class="required" /> </div>
		<div class="submit-group">
		  <input type="submit" value="submit" class="btn primary submit" />
		</div>
	  </fieldset>
	</form>
  </div>
{% endif %}